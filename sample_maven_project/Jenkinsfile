pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/herit6-hanu/sample_repository.git'
            }
        }

        stage('Build & Test') {
            steps {
                echo 'Building and running tests...'
                sh 'mvn clean test'
            }
        }

        stage('Post Build') {
            steps {
                echo 'Archiving test results...'
                junit '**/target/surefire-reports/*.xml'
            }
        }
    }
}
